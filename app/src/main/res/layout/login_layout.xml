<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:weightSum="1"
    tools:context="com.example.hp.imageprocessing.Login_Activity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="My Moments"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:visibility="visible" />


    <EditText
        android:id="@+id/edxUsername"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtMessage"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="textPersonName"
        android:text="    Enter User Name"
        android:textSize="20sp"
        android:typeface="serif" />


    <EditText
        android:id="@+id/edxPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edxUsername"
        android:layout_below="@+id/edxUsername"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="text"
        android:text="    Enter Password"
        android:textSize="20sp"
        android:typeface="serif"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnLogin"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Inverse"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="LOGIN"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />



    <EditText
        android:id="@+id/edxSignup"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:fontFamily="serif"
        android:inputType="textPersonName"
        android:text="      SignUp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_green_dark"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:typeface="serif"
        android:visibility="visible"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btnLogin"
        android:layout_alignStart="@+id/btnLogin" />

    <EditText
        android:id="@+id/edxFPass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="textPersonName"
        android:text="  Forget Password"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:typeface="serif"
        android:visibility="visible"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/edxSignup"
        android:layout_alignStart="@+id/textView5" />

</RelativeLayout>
